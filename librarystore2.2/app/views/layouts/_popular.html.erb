<table class="catalog">
    <% @items.limit(3).order(:id).each do |item| %>
    <tr>
        <td>
            <div class="image">
                <%= link_to (image_tag item.image_url, :style => "height:100px"), item %>
            </div>
            <div class="title">
                <%= link_to item.title, item %>
            </div>
            <div class="synopsis">
                <%= item.synopsis %>
            </div>
            <div class="price">
                <%= number_to_currency(item.price, :unit => "â‚¬") %>
            </div>
            <div class="links">
                <% if session[:login] == 1 %>
                <%= link_to 'Edit', edit_item_path(item) %>
                <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Do you want to delete this item?'} %>
                <% else %>
                

                <% end %>
            </div>
        </td>
    </tr>
    <% end %>
</table>