<p id="notice"><%= notice %></p>

<div id="itemsContainer">

<h1>Books</h1>

    <% @items.each do |item| %>
    <div class="itemhols">
       <h1><%= link_to (item.title), item %></h1>
       <p><%=item.author %></p>
       <p><%=item.synopsis %></p>
       <p>Price<%= number_to_currency(item.price, :unit => "â‚¬") %>
       <br>
       Category: <%= item.category %>
       </p>
       
       <p>
        <%= link_to 'Show', item, :class => "button", :role => "button" %>
        
        <% if session[:login] == 1 %>
        <%= link_to 'Edit', edit_item_path(item), :class => "button", :role => "button" %>
        <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Do you want to delete this item?' }, :class => "button", :role => "button" %>
        <% end %>
        
        <%= link_to 'Buy', cart_path, :class => "button", :role => "button" %>
        <%= link_to 'Rent', cart_path, :class => "button", :role => "button" %>
        </p>
     </div>   
     
     
</div>     
<% end %>
     
<br>
<% if session[:login] == 1 %>
<%= link_to 'New Item', new_item_path, :class => "button", :role => "button" %>

<% end %>
